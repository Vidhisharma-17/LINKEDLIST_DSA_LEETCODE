class Solution {
public:
    int pairSum(ListNode* head) {
        vector<int> temp;

        ListNode* curr=head;

        while(curr!=NULL){
            temp.push_back(curr->val);
            curr=curr->next;
        }

        int result=0;

        int i=0;
        int j=temp.size()-1;

        while(i<j){
            result=max(result,temp[i]+temp[j]);

            i++;
            j--;
        }
        return result;
    }
};
