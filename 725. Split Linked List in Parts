class Solution {
public:
    vector<ListNode*> splitListToParts(ListNode* head, int k) {
        vector<ListNode*> result(k,NULL);
         ListNode* curr=head;
        ListNode* prev=NULL;

        int l=0;
        while(curr){
            l++;
            curr=curr->next;
        }
        int eachBucketNode=l/k;
        int remainderNode=l%k;
        
        curr=head;
        for(int i=0;i<k;i++){
            result[i]=curr;
            for(int count=1;count<=eachBucketNode+(remainderNode>0?1:0);count++){
                prev=curr;
                curr=curr->next;
            }
            if(prev){
                prev->next=NULL;
                remainderNode--;
            }
        }
        return result;
        
    }
};
